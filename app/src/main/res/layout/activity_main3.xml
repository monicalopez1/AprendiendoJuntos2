<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewnom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewpass"
            android:layout_alignLeft="@+id/textViewpass"
            android:layout_alignStart="@+id/textViewpass"
            android:layout_marginBottom="12dp"
            android:text="Usuario:"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="169dp" />

        <TextView
            android:id="@+id/textViewpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iniciar"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@+id/et_password"
            android:layout_toStartOf="@+id/et_password"
            android:text="ContraseÃ±a:"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="235dp" />

        <EditText
            android:id="@+id/et_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewnom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="164dp" />

        <Button
            android:id="@+id/iniciar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="149dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="107dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/textViewnom"
            android:layout_toRightOf="@+id/textViewnom"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="Iniciar"
            android:textColor="@android:color/darker_gray"
            android:textColorLink="@color/colorPrimary"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="347dp"
            tools:textColorLink="@android:color/background_dark" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_usuario"
            android:layout_alignStart="@+id/et_usuario"
            android:layout_alignTop="@+id/textViewpass"
            android:ems="10"
            android:inputType="numberPassword" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_usuario"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/icono" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moni.aprendiendojuntos.Registrarse">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/registro"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Registro                Usuario"
            android:textColorLink="?android:attr/textColorSecondaryNoDisable"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/textView_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/registro"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="71dp"
            android:text="Nombre"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_nombre"
            android:layout_alignStart="@+id/textView_nombre"
            android:layout_below="@+id/textView_nombre"
            android:layout_marginTop="29dp"
            android:text="Apellido:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_apellido"
            android:layout_alignStart="@+id/textView_apellido"
            android:layout_centerVertical="true"
            android:text="Usuario:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_usuario"
            android:layout_alignRight="@+id/textView_usuario"
            android:layout_below="@+id/editText_usuario"
            android:layout_marginTop="23dp"
            android:text="ContraseÃ±a:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_apellido"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/textView_apellido"
            android:layout_toRightOf="@+id/textView_apellido"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_apellido"
            android:layout_alignLeft="@+id/editText_nom"
            android:layout_alignStart="@+id/editText_nom"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_app"
            android:layout_alignStart="@+id/editText_app"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_contra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_usuario"
            android:layout_alignStart="@+id/editText_usuario"
            android:layout_alignTop="@+id/textView_contrasena"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43dp"
            android:layout_toEndOf="@+id/textView_contrasena"
            android:layout_toRightOf="@+id/textView_contrasena"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Guardar"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText_nom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/segundaima" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/buttonlecturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonatras"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/buttonatras"
            android:layout_marginTop="62dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Lecturas"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonejercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonlecturas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="119dp"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Ejercicios"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonatras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonejercicios"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/buttonejercicios"
            android:layout_marginBottom="67dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:stateListAnimator="?android:attr/actionModeCloseDrawable"
            android:text="Salir"
            android:textSize="30sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>